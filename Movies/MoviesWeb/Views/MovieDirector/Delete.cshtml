@model MoviesWeb.ViewModels.MovieDirector.MovieDirectorViewModel

@{
    ViewData["Title"] = "Delete Director";
}

<h1>Delete Director</h1>

<h3>Are you sure you want to delete this director details?</h3>
<div>
    <h4>Director</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="~/@Model.Movie.ImageUrl" height="50" width="50" alt="image" asp-append-version="true" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Director.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Director.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Director.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="~/@Model.Director.ImageUrl" height="50" width="50" alt="image" asp-append-version="true" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MovieId" />
        <input type="hidden" asp-for="DirectorId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-movieId=@Model.MovieId>Back to List</a>
    </form>
</div>